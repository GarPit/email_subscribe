<h1>Subscribers</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Subscription</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= link_to subscriber.name, admin_subscriber_path(subscriber) %></td>
        <td><%= subscriber.email %></td>
        <td><%= subscriber.subscriptions.pluck(:name).join(",") %></td>
        <td><%= link_to "Edit", edit_admin_subscriber_path(subscriber) %></td>
        <td><%= link_to "Delete", admin_subscriber_path(subscriber), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>

</table>
